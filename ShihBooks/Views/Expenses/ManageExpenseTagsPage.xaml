<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:ShihBooks.Core;assembly=ShihBooks.Core"
             xmlns:vm="clr-namespace:ShihBooks.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:ShihBooks.Views.Controls"
             x:Class="ShihBooks.Views.Expenses.ManageExpenseTagsPage"
             x:DataType="vm:ManageExpenseTagsViewModel"
             Title="Expense Tags"
             x:Name="this">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddEntityCommand}" />
        <ToolbarItem Text="Edit" Command="{Binding UpdateEntityCommand}" />
    </ContentPage.ToolbarItems>

    <Grid ColumnDefinitions="*,*"
          RowDefinitions="Auto, *"
          ColumnSpacing="5"
          Padding="10">

        <controls:EntitySearchBar Grid.ColumnSpan="2" 
                                  Text="{Binding SearchText}"
                                  x:DataType="vm:ManageExpenseTagsViewModel"/>
        <controls:CoreEntityCollectionView Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Margin="0,10"/>
    </Grid>
</ContentPage>