<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:ShihBooks.Core;assembly=ShihBooks.Core"
             xmlns:vm="clr-namespace:ShihBooks.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:ExpensesViewModel"
             x:Class="ShihBooks.Views.ExpensesPage"
             x:Name="this">
    
    <ContentPage.Title>
        <MultiBinding StringFormat="{}{0}/{1}">
            <Binding Path="Month" StringFormat="Expenses for {0:D1}"/>
            <Binding Path="Year"/>
        </MultiBinding>
    </ContentPage.Title>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AddEntityCommand}" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <Border HeightRequest="50" Margin="0, 0, 0, 0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="22" />
            </Border.StrokeShape>
            <SearchBar Text="{Binding SearchText}">
                <SearchBar.Behaviors>
                    <toolkit:EventToCommandBehavior 
                            EventName="TextChanged"
                            Command="{Binding Source={x:Reference this}, Path=BindingContext.SearchEntityCommand}" />
                </SearchBar.Behaviors>
            </SearchBar>
        </Border>
        <CollectionView
            ItemsSource="{Binding FilteredExpenses}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:ExpenseView">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItemView CommandParameter="{Binding .}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExpensesViewModel}}, Path=DeleteExpenseCommand}">
                                    <Frame BackgroundColor="OrangeRed"
                                           HeightRequest="50"
                                           WidthRequest="50"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           CornerRadius="25"
                                           Padding="0">
                                        <Label Text="X" 
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"/>
                                    </Frame>
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="5" BackgroundColor="LightGreen">
                            <Frame Padding="0">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExpensesViewModel} }, Path=GoToExpenseDetailsCommand}" />
                                </Frame.GestureRecognizers>
                                <Grid Padding="3" ColumnSpacing="5" ColumnDefinitions="55,40,*,100">
                                    <Label Grid.Column="0"
                                       FontSize="16"
                                       Text="{Binding ExpenseDate, StringFormat='{0:MM/dd}'}" 
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center" />
                                    <Image Grid.Column="1"
                                       Aspect="AspectFill"
                                       Source="{Binding MerchantImageUrl}"                           
                                       WidthRequest="32" 
                                       HeightRequest="32"
                                    />
                                    <Label Grid.Column="2" 
                                       Text="{Binding Description}" 
                                       LineBreakMode="WordWrap"
                                       VerticalOptions="Center"
                                       VerticalTextAlignment="Center"
                                       FontSize="16" />
                                    <Label Grid.Column="3"
                                       FontSize="16"
                                       Text="{Binding Amount, StringFormat='${0:N2}'}" 
                                       HorizontalOptions="FillAndExpand"
                                       HorizontalTextAlignment="End"
                                       VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </Grid>
                    </SwipeView>
                </DataTemplate> 
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>