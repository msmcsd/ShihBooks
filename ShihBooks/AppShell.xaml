<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShihBooks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShihBooks"
    xmlns:views="clr-namespace:ShihBooks.Views"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Image Source="dotnet_bot.png" />
    </Shell.FlyoutHeader>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Expense Types"
        ContentTemplate="{DataTemplate views:ManageExpenseTypesPage}"
        Route="ManageExpenseTypesPage" />
    
    <ShellContent
        Title="Expense Events"
        ContentTemplate="{DataTemplate views:ManageExpenseEventsPage}"
        Route="ManageExpenseEventsPage" />
    
    <ShellContent
        Title="Tags"
        ContentTemplate="{DataTemplate views:ManageExpenseTagsPage}"
        Route="ManageExpenseTagsPage" />

    <Shell.FlyoutFooter>
        <Label Text="Copyright (c)" HorizontalOptions="Center" />
    </Shell.FlyoutFooter>
</Shell>
